{%- macro instrumentFactory(type) -%}
{%- if type == "gauge" -%}gauge[A]
{%- elif type == "counter" -%}counter[A]
{%- elif type == "updowncounter" -%}upDownCounter[A]
{%- elif type == "histogram" -%}histogram[A]
